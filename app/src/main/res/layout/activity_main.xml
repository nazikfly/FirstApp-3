<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".MainActivity">
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/username"
        android:background="@color/white_green"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="48dp"
        android:padding="14dp"
        android:text="Register"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:paddingHorizontal="38dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_base"
        android:drawableTint="@color/white"
        android:drawablePadding="108dp"

/>




        />

    <EditText
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_et"
        android:hint="Username: "
        android:layout_marginHorizontal="24dp"
        android:padding="24dp"
        android:layout_marginTop="118dp"
        android:id="@+id/username"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email: "
        android:layout_marginHorizontal="24dp"
        android:padding="24dp"
        android:id="@+id/email"
        android:background="@color/white_green"
        android:layout_marginTop="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:hint="Password: "
        android:background="@drawable/bottom_et"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginTop="4dp"
        android:id="@+id/password"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textStyle="bold"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/password"
            android:layout_marginTop="34dp"
            android:textSize="28dp"
            android:background="@drawable/button"
            android:id="@+id/next"/>

    <ImageView

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/owl"
        app:layout_constraintTop_toBottomOf="@id/next"
        app:layout_constraintStart_toStartOf="@id/next"
        app:layout_constraintEnd_toEndOf="@id/next"
        android:layout_margin="40dp"
        android:id="@+id/owl"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trivia"
        android:textSize="42dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/owl"
        android:layout_marginHorizontal="148dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>